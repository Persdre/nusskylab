<table class="table table-hover table-sortable">
  <thead>
  <tr>
    <th class="unsortable sort-index">Index</th><th>User Name</th><th>User Email</th><th class="unsortable">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% locals[:tutors].each_with_index do |tutor, idx| %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= tutor.user.user_name %></td>
        <td><%= tutor.user.email %></td>
        <td>
          <a class="btn btn-default btn-xs" href="<%= tutor_path(tutor.id) %>">View</a>
          <%= link_to 'Delete', tutor_path(tutor.id), method: :delete, class: 'btn btn-danger btn-xs',
            data: { confirm: 'Are you sure you want to delete this tutor?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
