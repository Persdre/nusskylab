<div class="col-sm-12">
  <div class="col-sm-2">
  <% if locals[:selected_type] == 'Vostok' %>
      <%= link_to image_tag("Vostok_Icon.jpg", class: 'img-rounded', style: 'width: 80px;') %>
  <% elsif locals[:selected_type] == 'Project Gemini' %>
      <%= link_to image_tag("Project_Gemini_Icon.png", class: 'img-rounded', style: 'width: 80px;') %>
  <% elsif locals[:selected_type] == 'Apollo 11' %>
      <%= link_to image_tag("Apollo_11_Icon.png", class: 'img-rounded', style: 'width: 80px;') %>
  <% end %>
  </div>
  <div class="col-sm-4"><%= number_to_percentage(100.0 * locals[:selected_teams].length.to_f / locals[:teams].length.to_f, precision: 0) %> of the cohort</div>
</div>
<br><br><hr>
<% locals[:selected_teams].each_with_index do |team, idx| %>
    <div class="col-sm-12">
      <%= idx + 1 %>. <strong><%= team.team_name %></strong>
      <span class="text-muted">Students:</span>
      <%= team.students.map{|student| student.user.user_name}.join(' & ') %>
    </div>
    <div class="col-sm-12">
      <span class="text-muted">Advised by:</span> <%= team.adviser ? team.adviser.user.user_name : 'Not assigned' %>
    </div>
    <br><hr>
<% end %>
