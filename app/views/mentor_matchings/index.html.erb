<% content_for :main_content do %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="text-center">Mentor Matchings in cohort <%= cohort %></h3>
    </div>
    <div class="panel-body">
      <div class="col-sm-12">
        <% if current_user_admin? %>
          <%= link_to 'Download CSV', mentor_matchings_path(format: 'csv', cohort: cohort), class: 'btn btn-primary' %>
        <% end %>
      </div>
      <br><hr>
      <%= render 'mentor_matchings_table', locals: { mentor_matchings: @mentor_matchings } %>
      <br><br><hr>
      <div class="col-sm-12">
        <% all_cohorts.each do |cohort| %>
          <div class="col-sm-2">
            <%= link_to cohort, mentor_matchings_path(cohort: cohort), class: 'btn btn-info' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
