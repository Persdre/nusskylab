<table id = "teams-table" class="table tablesorter">
  <thead>
  <tr>
    <th class="unsortable sort-index">Index</th><th>Team Name</th><th>Project Level</th><th>Has dropped</th><th>Student 1</th><th>Student 2</th>
    <th>Adviser</th><th>Mentor</th><th>Submission 1</th><th>Submission 2</th><th>Submission 3</th><th class="unsortable">Cohort</th><th class="unsortable">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% locals[:teams].each_with_index do |team, idx| %>
      <tr>
        <td><%= idx + 1 %></td>
        <td>
          <%= render 'team_name_representation', locals: {team: team} %>
        </td>
        <td><%= team.get_project_level %></td>
        <td><%= team.has_dropped %></td>
        <td><%= team.get_team_members[1] == nil ? "": team.get_team_members[0].user_name %></td>
        <td><%= team.get_team_members[1] == nil ? "": team.get_team_members[1].user_name %></td>
        <td><%= team.adviser ? team.adviser.user.user_name : 'Not assigned' %></td>
        <td><%= team.mentor ? team.mentor.user.user_name : 'Not assigned' %></td>
          <% for i in 1..3 do %>
            <td>
            <% submission = team.get_own_submissions_in_order[i] %>
            <%if team.get_team_submission_status(submission) == "Submitted" %>
              <a class="btn btn-primary btn-xs" href="<%= milestone_team_submission_path(submission.milestone_id, submission.team_id, submission.id) %>" target="_blank"> Evaluate submission </a>
            <% elsif team.get_team_submission_status(submission) == "Late" %>
              <a class="btn btn-warning btn-xs" href="<%= milestone_team_submission_path(submission.milestone_id, submission.team_id, submission.id) %>" target="_blank"> Evaluate late submission </a>
            <% else %>
              <%= team.get_team_submission_status(team.get_own_submissions_in_order[i]) %>
            <% end %>
          </td>
         <% end %>
        <td><%= team.cohort %></td>
        <td>
          <% if can_current_user_view_team(team) %>
              <a class="btn btn-primary btn-xs" href="<%=  team_path(team.id) %>">View</a>
          <% end %>
          <% if can_current_user_edit_team(team) %>
              <a class="btn btn-default btn-xs" href="<%= edit_team_path(team.id) %>">Edit</a>
          <% end %>
          <% if can_current_user_delete_team(team) %>
              <%= link_to 'Delete', team_path(team.id), method: :delete, class: 'btn btn-danger btn-xs',
                data: { confirm: 'Are you sure you want to delete this team and all associated resources?' } %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
