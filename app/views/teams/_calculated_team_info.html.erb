<table class="table table-hover">
  <thead>
  <tr>
    <th>Milestone name</th><th>Peer evaluation average</th><th>Actions</th>
    <th>Feedback average</th><th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% locals[:milestones].each do |milestone| %>
      <tr>
        <td><%= milestone.name %></td>
        <td><%= locals[:eval_ratings_hash][milestone.id].nil? ?
                        'Not available' : number_with_precision(locals[:eval_ratings_hash][milestone.id], precision: 1) %></td>
        <td><a href="<%= milestone_team_received_evals_path(milestone.id, locals[:team].id) %>"
               class="btn btn-success">View received evaluations</a></td>
      <% if milestone.name == 'Milestone 3' %>
          <td><%= locals[:feedback_ratings_hash][:all].nil? ?
                          'Not available' : number_with_precision(locals[:feedback_ratings_hash][:all], precision: 1) %>
          </td>
          <td>
            <a href="<%= milestone_team_received_feedbacks_path(3, locals[:team].id) %>"
               class="btn btn-success">View all feedbacks</a>
          </td>
      <% else %>
          <td>Nil</td>
          <td>Not available</td>
      <% end %>
      </tr>
  <% end %>
  <tr>
    <td>Overall</td>
    <td><%= locals[:eval_ratings_hash][:all].nil? ?
                    'Not available' : number_with_precision(locals[:eval_ratings_hash][:all], precision: 1) %></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  </tbody>
</table>
