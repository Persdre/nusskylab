<% content_for :main_content do %>
    <% javascript 'survey_templates.js' %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="text-center">Survey Templates</h3>
      </div>
      <div class="panel-body">
        <%= render 'survey_templates_table', locals: { survey_templates: @survey_templates} %>
        <hr>
        <div class="col-sm-12">
          <div class="col-sm-2 col-sm-offset-5">
            <a href="<%= new_survey_template_path %>" class="btn btn-success">Create Survey Template</a>
          </div>
        </div>
      </div>
    </div>
<% end %>
